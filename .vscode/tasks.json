{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "bin",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
        "-G",
        "Ninja"
      ],
      "problemMatcher": []
    },
    {
      "label": "CMake: build",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "bin", "--parallel"],
      "problemMatcher": []
    },
    {
      // launch program engine
      "label": "C++ Launch",
      "type": "shell",
      "command": "${workspaceFolder}/bin/engine",
      "args": [],
      "problemMatcher": [],
      "dependsOn": "CMake: build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "CMake: configure && build && run",
      "dependsOn": ["CMake: configure", "CMake: build", "C++ Launch"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "CMake: clean",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "bin", "--target", "clean"],
      "problemMatcher": []
    }
  ]
}
